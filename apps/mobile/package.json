{
  "name": "@barterdash/mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:property": "jest --testPathPattern=property",
    "e2e:build:ios": "detox build -c ios.sim.debug",
    "e2e:test:ios": "detox test -c ios.sim.debug",
    "e2e:build:android": "detox build -c android.emu.debug",
    "e2e:test:android": "detox test -c android.emu.debug",
    "e2e:build:device": "detox build -c android.device.debug",
    "e2e:test:device": "detox test -c android.device.debug"
  },
  "dependencies": {
    "@expo-google-fonts/plus-jakarta-sans": "^0.4.2",
    "@expo/vector-icons": "^15.0.3",
    "@gluestack-ui/config": "^1.1.20",
    "@gluestack-ui/hooks": "^0.1.13",
    "@gluestack-ui/nativewind-utils": "^1.0.28",
    "@gluestack-ui/themed": "^1.1.73",
    "@react-native-aria/dialog": "^0.0.5",
    "@react-native-aria/focus": "^0.2.9",
    "@react-native-aria/interactions": "^0.2.16",
    "@react-native-aria/overlays": "^0.3.15",
    "@react-native-aria/utils": "^0.2.12",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-google-signin/google-signin": "^16.1.1",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/native-stack": "^7.3.16",
    "@stream-io/react-native-webrtc": "^137.1.0",
    "@stream-io/video-react-native-sdk": "^1.21.1",
    "@stripe/stripe-react-native": "^0.58.0",
    "@supabase/supabase-js": "^2.91.1",
    "@tanstack/react-query": "^5.90.20",
    "axios": "^1.13.2",
    "babel-preset-expo": "^54.0.10",
    "base64-arraybuffer": "^1.0.2",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "expo": "~54.0.32",
    "expo-auth-session": "^7.0.10",
    "expo-build-properties": "^1.0.10",
    "expo-camera": "^17.0.10",
    "expo-constants": "^18.0.13",
    "expo-dev-client": "^6.0.20",
    "expo-device": "^7.1.4",
    "expo-document-picker": "~14.0.8",
    "expo-image-picker": "^17.0.10",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "^8.0.11",
    "expo-local-authentication": "^17.0.8",
    "expo-notifications": "^0.29.14",
    "expo-router": "^6.0.22",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "^6.0.9",
    "expo-web-browser": "^15.0.10",
    "lucide-react-native": "^0.563.0",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.5",
    "react-native-css-interop": "^0.2.1",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-url-polyfill": "^3.0.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.21.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.1",
    "zustand": "^5.0.10"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|expo|@expo|@unimodules|unimodules|sentry-expo|native-base|react-clone-referenced-element|@react-native-community|expo-router|@expo/vector-icons)/)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.8",
    "@types/react": "~19.1.0",
    "detox": "^20.12.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "detox": {
    "testRunner": {
      "name": "jest",
      "args": {
        "config": "e2e/jest.config.js"
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/BarterDash.app",
        "build": "xcodebuild -workspace ios/BarterDash.xcworkspace -scheme BarterDash -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug"
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 15"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_5_API_34"
        }
      },
      "android.device": {
        "type": "android.attached",
        "device": {
          "adbName": ".*"
        }
      }
    },
    "configurations": {
      "ios.sim.debug": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "android.emu.debug": {
        "device": "emulator",
        "app": "android.debug"
      },
      "android.device.debug": {
        "device": "android.device",
        "app": "android.debug"
      }
    }
  },
  "private": true
}
